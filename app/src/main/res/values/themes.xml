<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fobres" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_black</item>
        <item name="colorPrimaryVariant">@color/base_gray</item>
        <item name="colorOnPrimary">@color/base_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/base_perlamuter</item>
        <item name="colorSecondaryVariant">@color/base_perlamuter</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Test_Menu.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Test_Menu.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Fobres.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Fobres.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Fobres.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>